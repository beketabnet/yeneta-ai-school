import React, { useState, useEffect } from 'react';
import Card from '../Card';
import { BeakerIcon, LightBulbIcon, CheckCircleIcon, XCircleIcon, FireIcon } from '../icons/Icons';
import { apiService } from '../../services/apiService';
import { PracticeFeedback } from '../../types';

interface PracticeQuestion {
    id: string;
    question: string;
    correctAnswer: string;
    subject: string;
    topic: string;
    gradeLevel: number;
    difficulty: 'easy' | 'medium' | 'hard';
    questionType: 'multiple_choice' | 'true_false' | 'short_answer' | 'essay' | 'fill_blank';
    options?: string[];
}

interface TestResult {
    totalQuestions: number;
    correctAnswers: number;
    score: number;
    timeSpent: number;
    performanceLevel: string;
}

interface StudentPerformance {
    correctCount: number;
    totalCount: number;
    averageScore: number;
    currentDifficulty: 'easy' | 'medium' | 'hard';
    streak: number;
}

type PracticeMode = 'continuous' | 'test';

const PracticeLabs: React.FC = () => {
    // Mode and configuration states
    const [practiceMode, setPracticeMode] = useState<PracticeMode>('continuous');
    const [testQuestionCount, setTestQuestionCount] = useState<number>(10);
    
    // Filter states
    const [selectedSubject, setSelectedSubject] = useState<string>('');
    const [topicInput, setTopicInput] = useState<string>('');
    const [selectedGrade, setSelectedGrade] = useState<number>(9);
    const [useCurriculum, setUseCurriculum] = useState<boolean>(true);
    const [adaptiveDifficulty, setAdaptiveDifficulty] = useState<boolean>(true);

    // Question states
    const [currentQuestion, setCurrentQuestion] = useState<PracticeQuestion | null>(null);
    const [userAnswer, setUserAnswer] = useState('');
    const [selectedOption, setSelectedOption] = useState<string>('');
    const [feedback, setFeedback] = useState<PracticeFeedback | null>(null);
    const [showHint, setShowHint] = useState(false);
    const [isLoading, setIsLoading] = useState(false);
    const [isGenerating, setIsGenerating] = useState(false);
    
    // Test mode states
    const [testInProgress, setTestInProgress] = useState(false);
    const [currentQuestionNumber, setCurrentQuestionNumber] = useState(1);
    const [testAnswers, setTestAnswers] = useState<Array<{question: string, userAnswer: string, correctAnswer: string, isCorrect: boolean}>>([]);
    const [testResult, setTestResult] = useState<TestResult | null>(null);
    const [testStartTime, setTestStartTime] = useState<number>(0);
    
    // Adaptive learning states
    const [performance, setPerformance] = useState<StudentPerformance>({
        correctCount: 0,
        totalCount: 0,
        averageScore: 0,
        currentDifficulty: 'medium',
        streak: 0
    });
    const [motivationalMessage, setMotivationalMessage] = useState<string>('');

    // Subject and topic options
    const subjects = [
        'Mathematics',
        'Physics',
        'Chemistry',
        'Biology',
        'English',
        'History',
        'Geography',
        'Amharic'
    ];

    const topicsBySubject: Record<string, string[]> = {
        'Mathematics': ['Algebra', 'Geometry', 'Trigonometry', 'Calculus', 'Statistics', 'General'],
        'Physics': ['Mechanics', 'Electricity', 'Magnetism', 'Optics', 'Thermodynamics', 'General'],
        'Chemistry': ['Organic Chemistry', 'Inorganic Chemistry', 'Physical Chemistry', 'Biochemistry', 'General'],
        'Biology': ['Cell Biology', 'Genetics', 'Ecology', 'Human Anatomy', 'Botany', 'General'],
        'English': ['Grammar', 'Literature', 'Writing', 'Reading Comprehension', 'General'],
        'History': ['Ancient History', 'Modern History', 'Ethiopian History', 'World History', 'General'],
        'Geography': ['Physical Geography', 'Human Geography', 'Ethiopian Geography', 'General'],
        'Amharic': ['Grammar', 'Literature', 'Writing', 'General']
    };

    const grades = [7, 8, 9, 10, 11, 12];

    const handleGenerateQuestion = async () => {
        if (!selectedSubject) {
            alert('Please select a subject first');
            return;
        }

        setIsGenerating(true);
        setFeedback(null);
        setUserAnswer('');
        setShowHint(false);

        try {
            const response = await apiService.generatePracticeQuestion({
                subject: selectedSubject,
                topic: selectedTopic || 'General',
                gradeLevel: selectedGrade,
                difficulty: difficulty,
                useCurriculum: useCurriculum
            });

            setCurrentQuestion(response);
        } catch (error) {
            console.error('Error generating question:', error);
            alert('Failed to generate question. Please try again.');
        } finally {
            setIsGenerating(false);
        }
    };

    const handleSubmitAnswer = async () => {
        if (!currentQuestion || !userAnswer.trim()) {
            alert('Please provide an answer');
            return;
        }

        setIsLoading(true);

        try {
            const result = await apiService.evaluatePracticeAnswer(
                currentQuestion.question,
                userAnswer,
                currentQuestion.correctAnswer
            );

            setFeedback(result);
        } catch (error) {
            console.error('Error evaluating answer:', error);
            alert('Failed to evaluate answer. Please try again.');
        } finally {
            setIsLoading(false);
        }
    };

    const handleNextQuestion = () => {
        setCurrentQuestion(null);
        setUserAnswer('');
        setFeedback(null);
        setShowHint(false);
        handleGenerateQuestion();
    };

    const handleNewSession = () => {
        setCurrentQuestion(null);
        setUserAnswer('');
        setFeedback(null);
        setShowHint(false);
    };

    return (
        <div className="space-y-6">
            {/* Header */}
            <div className="flex items-center justify-between">
                <div>
                    <h2 className="text-2xl font-bold text-gray-900 dark:text-white flex items-center gap-2">
                        <BeakerIcon className="w-8 h-8 text-primary" />
                        Practice Labs
                    </h2>
                    <p className="text-sm text-gray-600 dark:text-gray-400 mt-1">
                        Generate personalized practice questions based on your curriculum
                    </p>
                </div>
            </div>

            {/* Configuration Panel */}
            <Card title="Practice Settings">
                <div className="space-y-4">
                    {/* Subject Selection */}
                    <div>
                        <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Subject *
                        </label>
                        <select
                            value={selectedSubject}
                            onChange={(e) => {
                                setSelectedSubject(e.target.value);
                                setSelectedTopic('');
                            }}
                            className="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent"
                        >
                            <option value="">Select a subject...</option>
                            {subjects.map(subject => (
                                <option key={subject} value={subject}>{subject}</option>
                            ))}
                        </select>
                    </div>

                    {/* Topic Selection */}
                    {selectedSubject && (
                        <div>
                            <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                Topic (Optional)
                            </label>
                            <select
                                value={selectedTopic}
                                onChange={(e) => setSelectedTopic(e.target.value)}
                                className="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent"
                            >
                                <option value="">All topics</option>
                                {topicsBySubject[selectedSubject]?.map(topic => (
                                    <option key={topic} value={topic}>{topic}</option>
                                ))}
                            </select>
                        </div>
                    )}

                    {/* Grade Level and Difficulty */}
                    <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                Grade Level
                            </label>
                            <select
                                value={selectedGrade}
                                onChange={(e) => setSelectedGrade(Number(e.target.value))}
                                className="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent"
                            >
                                {grades.map(grade => (
                                    <option key={grade} value={grade}>Grade {grade}</option>
                                ))}
                            </select>
                        </div>

                        <div>
                            <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                Difficulty Level
                            </label>
                            <select
                                value={difficulty}
                                onChange={(e) => setDifficulty(e.target.value as 'easy' | 'medium' | 'hard')}
                                className="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent"
                            >
                                <option value="easy">Easy</option>
                                <option value="medium">Medium</option>
                                <option value="hard">Hard</option>
                            </select>
                        </div>
                    </div>

                    {/* Curriculum Toggle */}
                    <div className="flex items-center justify-between p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg border border-blue-200 dark:border-blue-800">
                        <div className="flex-1">
                            <div className="flex items-center gap-2">
                                <span className="text-sm font-medium text-gray-900 dark:text-white">
                                    Use Curriculum Books
                                </span>
                                <span className="text-xs bg-blue-100 dark:bg-blue-800 text-blue-800 dark:text-blue-200 px-2 py-0.5 rounded-full">
                                    RAG
                                </span>
                            </div>
                            <p className="text-xs text-gray-600 dark:text-gray-400 mt-1">
                                Generate questions from Ethiopian curriculum textbooks with hints and tips
                            </p>
                        </div>
                        <button
                            type="button"
                            className={`${
                                useCurriculum ? 'bg-primary' : 'bg-gray-200 dark:bg-gray-600'
                            } relative inline-flex items-center h-6 rounded-full w-11 transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary`}
                            onClick={() => setUseCurriculum(!useCurriculum)}
                            aria-pressed={useCurriculum}
                        >
                            <span
                                className={`${
                                    useCurriculum ? 'translate-x-6' : 'translate-x-1'
                                } inline-block w-4 h-4 transform bg-white rounded-full transition-transform`}
                            />
                        </button>
                    </div>

                    {/* Generate Button */}
                    <button
                        onClick={handleGenerateQuestion}
                        disabled={!selectedSubject || isGenerating}
                        className="w-full px-4 py-3 bg-primary text-white rounded-lg hover:bg-primary-dark disabled:bg-gray-300 dark:disabled:bg-gray-600 disabled:cursor-not-allowed transition-colors font-medium"
                    >
                        {isGenerating ? (
                            <span className="flex items-center justify-center gap-2">
                                <div className="w-4 h-4 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
                                Generating Question...
                            </span>
                        ) : (
                            'Generate Practice Question'
                        )}
                    </button>
                </div>
            </Card>

            {/* Question Display */}
            {currentQuestion && (
                <Card title={`${currentQuestion.subject} - ${currentQuestion.topic}`}>
                    <div className="space-y-4">
                        {/* Question Info */}
                        <div className="flex items-center gap-2 text-xs text-gray-600 dark:text-gray-400">
                            <span className="px-2 py-1 bg-gray-100 dark:bg-gray-700 rounded">
                                Grade {currentQuestion.gradeLevel}
                            </span>
                            <span className={`px-2 py-1 rounded ${
                                currentQuestion.difficulty === 'easy' ? 'bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300' :
                                currentQuestion.difficulty === 'medium' ? 'bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-300' :
                                'bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-300'
                            }`}>
                                {currentQuestion.difficulty.charAt(0).toUpperCase() + currentQuestion.difficulty.slice(1)}
                            </span>
                            {useCurriculum && (
                                <span className="px-2 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 rounded">
                                    ðŸ“š Curriculum-based
                                </span>
                            )}
                        </div>

                        {/* Question Text */}
                        <div className="p-4 bg-gray-50 dark:bg-gray-800 rounded-lg">
                            <p className="text-lg font-medium text-gray-900 dark:text-white">
                                {currentQuestion.question}
                            </p>
                        </div>

                        {/* Hint Button */}
                        {!feedback && (
                            <button
                                onClick={() => setShowHint(!showHint)}
                                className="flex items-center gap-2 text-sm text-primary hover:text-primary-dark transition-colors"
                            >
                                <LightBulbIcon className="w-5 h-5" />
                                {showHint ? 'Hide Hint' : 'Show Hint'}
                            </button>
                        )}

                        {/* Hint Display */}
                        {showHint && !feedback && (
                            <div className="p-4 bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg">
                                <p className="text-sm text-gray-700 dark:text-gray-300">
                                    ðŸ’¡ <strong>Hint:</strong> Think about the key concepts in {currentQuestion.topic}. 
                                    {useCurriculum && ' Review the relevant chapter in your textbook for guidance.'}
                                </p>
                            </div>
                        )}

                        {/* Answer Input */}
                        {!feedback && (
                            <div>
                                <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                    Your Answer
                                </label>
                                <textarea
                                    value={userAnswer}
                                    onChange={(e) => setUserAnswer(e.target.value)}
                                    placeholder="Type your answer here..."
                                    rows={4}
                                    className="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent resize-none"
                                />
                                <button
                                    onClick={handleSubmitAnswer}
                                    disabled={!userAnswer.trim() || isLoading}
                                    className="mt-3 w-full px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary-dark disabled:bg-gray-300 dark:disabled:bg-gray-600 disabled:cursor-not-allowed transition-colors"
                                >
                                    {isLoading ? 'Evaluating...' : 'Submit Answer'}
                                </button>
                            </div>
                        )}

                        {/* Feedback Display */}
                        {feedback && (
                            <div className="space-y-4">
                                {/* Score and Status */}
                                <div className={`p-4 rounded-lg border-2 ${
                                    feedback.isCorrect
                                        ? 'bg-green-50 dark:bg-green-900/20 border-green-500'
                                        : 'bg-yellow-50 dark:bg-yellow-900/20 border-yellow-500'
                                }`}>
                                    <div className="flex items-center justify-between mb-2">
                                        <div className="flex items-center gap-2">
                                            {feedback.isCorrect ? (
                                                <CheckCircleIcon className="w-6 h-6 text-green-600 dark:text-green-400" />
                                            ) : (
                                                <LightBulbIcon className="w-6 h-6 text-yellow-600 dark:text-yellow-400" />
                                            )}
                                            <span className="text-lg font-bold text-gray-900 dark:text-white">
                                                {feedback.isCorrect ? 'ðŸŽ‰ Excellent!' : 'ðŸ’¡ Good Try! Let\'s learn together'}
                                            </span>
                                        </div>
                                        <span className="text-2xl font-bold text-gray-900 dark:text-white">
                                            {feedback.score}/100
                                        </span>
                                    </div>
                                </div>

                                {/* Feedback */}
                                <div className="p-4 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
                                    <h4 className="font-semibold text-gray-900 dark:text-white mb-2">FEEDBACK</h4>
                                    <p className="text-gray-700 dark:text-gray-300">{feedback.feedback}</p>
                                </div>

                                {/* Explanation */}
                                {feedback.explanation && (
                                    <div className="p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg border border-blue-200 dark:border-blue-800">
                                        <h4 className="font-semibold text-gray-900 dark:text-white mb-2 flex items-center gap-2">
                                            ðŸ“š EXPLANATION
                                        </h4>
                                        <p className="text-gray-700 dark:text-gray-300">{feedback.explanation}</p>
                                    </div>
                                )}

                                {/* Hints */}
                                {feedback.hints && feedback.hints.length > 0 && (
                                    <div className="p-4 bg-yellow-50 dark:bg-yellow-900/20 rounded-lg border border-yellow-200 dark:border-yellow-800">
                                        <h4 className="font-semibold text-gray-900 dark:text-white mb-2 flex items-center gap-2">
                                            ðŸ’¡ HINTS FOR NEXT TIME
                                        </h4>
                                        <ul className="list-disc list-inside space-y-1 text-gray-700 dark:text-gray-300">
                                            {feedback.hints.map((hint, index) => (
                                                <li key={index}>{hint}</li>
                                            ))}
                                        </ul>
                                    </div>
                                )}

                                {/* Next Steps */}
                                {feedback.nextSteps && (
                                    <div className="p-4 bg-purple-50 dark:bg-purple-900/20 rounded-lg border border-purple-200 dark:border-purple-800">
                                        <h4 className="font-semibold text-gray-900 dark:text-white mb-2 flex items-center gap-2">
                                            ðŸŽ¯ NEXT STEPS
                                        </h4>
                                        <p className="text-gray-700 dark:text-gray-300">{feedback.nextSteps}</p>
                                    </div>
                                )}

                                {/* Action Buttons */}
                                <div className="flex gap-3">
                                    <button
                                        onClick={handleNextQuestion}
                                        className="flex-1 px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary-dark transition-colors"
                                    >
                                        Next Question
                                    </button>
                                    <button
                                        onClick={handleNewSession}
                                        className="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-white rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors"
                                    >
                                        New Session
                                    </button>
                                </div>
                            </div>
                        )}
                    </div>
                </Card>
            )}

            {/* Empty State */}
            {!currentQuestion && !isGenerating && (
                <Card title="">
                    <div className="text-center py-12">
                        <BeakerIcon className="w-16 h-16 text-gray-400 mx-auto mb-4" />
                        <h3 className="text-lg font-medium text-gray-900 dark:text-white mb-2">
                            Ready to Practice?
                        </h3>
                        <p className="text-gray-600 dark:text-gray-400 mb-4">
                            Select your subject, topic, and grade level above, then click "Generate Practice Question" to begin!
                        </p>
                        {useCurriculum && (
                            <p className="text-sm text-blue-600 dark:text-blue-400">
                                ðŸ“š Questions will be generated from your Ethiopian curriculum textbooks
                            </p>
                        )}
                    </div>
                </Card>
            )}
        </div>
    );
};

export default PracticeLabs;
