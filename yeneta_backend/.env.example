# ============================================
# YENETA AI SCHOOL - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your actual values

# --------------------------------------------
# Django Configuration
# --------------------------------------------
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,*
DATABASE_URL=sqlite:///db.sqlite3

# ============================================
# MULTI-API KEY CONFIGURATION
# ============================================
# Support for multiple API keys with automatic failover and token limit tracking

# ============================================
# OpenAI API Keys (Multiple Keys Support)
# ============================================
# Format: comma-separated list of API keys
# Each key can have different rate limits configured
OPENAI_API_KEYS=sk-proj-key1-here,sk-proj-key2-here,sk-proj-key3-here
OPENAI_ORG_ID=org-your-org-here

# OpenAI Models (one per key index)
OPENAI_MODEL_0=gpt-4o
OPENAI_MODEL_1=gpt-4o
OPENAI_MODEL_2=gpt-4o-mini

# OpenAI Token Limits (per key index)
# Minute limits (tokens per minute)
OPENAI_MAX_TOKENS_PER_MINUTE_0=90000
OPENAI_MAX_TOKENS_PER_MINUTE_1=90000
OPENAI_MAX_TOKENS_PER_MINUTE_2=90000

# Day limits (tokens per day)
OPENAI_MAX_TOKENS_PER_DAY_0=2000000
OPENAI_MAX_TOKENS_PER_DAY_1=2000000
OPENAI_MAX_TOKENS_PER_DAY_2=2000000

# ============================================
# Google Gemini API Keys (Multiple Keys Support)
# ============================================
# Format: comma-separated list of API keys
GEMINI_API_KEYS=AIza-key1-here,AIza-key2-here,AIza-key3-here

# Gemini Models (one per key index)
GEMINI_MODEL_0=gemini-1.5-pro-latest
GEMINI_MODEL_1=gemini-1.5-flash-latest
GEMINI_MODEL_2=gemini-1.5-flash-8b-latest

# Gemini Token Limits (per key index)
# Minute limits (tokens per minute)
GEMINI_MAX_TOKENS_PER_MINUTE_0=60000
GEMINI_MAX_TOKENS_PER_MINUTE_1=60000
GEMINI_MAX_TOKENS_PER_MINUTE_2=60000

# Day limits (tokens per day)
GEMINI_MAX_TOKENS_PER_DAY_0=1000000
GEMINI_MAX_TOKENS_PER_DAY_1=1000000
GEMINI_MAX_TOKENS_PER_DAY_2=1000000

# ============================================
# SERP API Keys (Multiple Keys Support)
# ============================================
# Format: comma-separated list of API keys
SERP_API_KEYS=serp-key1-here,serp-key2-here,serp-key3-here
SERP_API_URL=https://serpapi.com/search
SERP_ENGINE=google
SERP_LOCATION=Ethiopia

# SERP Token Limits (per key index)
# Minute limits (requests per minute)
SERP_MAX_TOKENS_PER_MINUTE_0=100
SERP_MAX_TOKENS_PER_MINUTE_1=100
SERP_MAX_TOKENS_PER_MINUTE_2=100

# Day limits (requests per day)
SERP_MAX_TOKENS_PER_DAY_0=100000
SERP_MAX_TOKENS_PER_DAY_1=100000
SERP_MAX_TOKENS_PER_DAY_2=100000

# ============================================
# Ollama Configuration - Tier 1 (Offline/Free)
# ============================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_TEXT_SMALL=gemma2:2b
OLLAMA_MODEL_TEXT_MEDIUM=gemma2:9b
OLLAMA_MODEL_MULTIMODAL=llava:7b
OLLAMA_TIMEOUT=120

# --------------------------------------------
# Vector Database (RAG)
# --------------------------------------------
VECTOR_DB_TYPE=chromadb
VECTOR_DB_PATH=./data/vector_store
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# --------------------------------------------
# Cost Management
# --------------------------------------------
MONTHLY_BUDGET_USD=500.00
BUDGET_ALERT_THRESHOLD=0.80
COST_TRACKING_ENABLED=True

# Per-user daily limits (USD)
STUDENT_DAILY_LIMIT=0.10
TEACHER_DAILY_LIMIT=1.00
ADMIN_DAILY_LIMIT=5.00

# --------------------------------------------
# LLM Router Configuration
# --------------------------------------------
DEFAULT_LLM_TIER=gemini-flash
ENABLE_OLLAMA_FALLBACK=True
ENABLE_COST_OPTIMIZATION=True
ENABLE_RAG=True
MAX_CONTEXT_TOKENS=8000
MAX_RESPONSE_TOKENS=2000

# --------------------------------------------
# Frontend Configuration
# --------------------------------------------
VITE_API_BASE_URL=http://localhost:8000/api
VITE_ENABLE_OFFLINE_MODE=True

# --------------------------------------------
# Logging & Monitoring
# --------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=./logs/yeneta.log
ENABLE_LLM_LOGGING=True
ENABLE_COST_LOGGING=True

# --------------------------------------------
# Security
# --------------------------------------------
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_EXPIRATION_HOURS=24
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# --------------------------------------------
# Feature Flags
# --------------------------------------------
ENABLE_AI_TUTOR=True
ENABLE_LESSON_PLANNER=True
ENABLE_AUTO_GRADING=True
ENABLE_CONTENT_GENERATION=True
ENABLE_WEB_SEARCH=True
